<h3>My Journal</h3>
<h6>Welcome {{name}}</h6>
{{#if stories}}
<p>Here are your sessions</p>
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/entries/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/entries/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
                        <form action="/entries/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>Your journal contains all of your entries. <a href="/entries/add">Add your first entry!</a></p>
{{/if}}