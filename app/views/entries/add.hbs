<h3>Add Entry</h3>
<div class="row">
    <form action="/entries" method="POST" class="col s12">

        <div class="row">
            <div class="input-field">
                <input type="text" id="date" name="date" class="datepicker">
                <label for="date">Date</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <textarea id="notes" name="notes" class="materialize-textarea"></textarea>
                <label for="notes">Notes</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="visibility" name="visibility">
                    <option value="private" selected>Private</option>
                    <option value="public">Public</option>
                </select>
                <label for="visibility">Visibility</label>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>

    <script>
        // set the default date in the datepicker to today
        document.addEventListener('DOMContentLoaded', function() {
            let options = {
                defaultDate: new Date(),
                setDefaultDate: true
            };
            let elems = document.querySelector('#date');
            let instance = M.Datepicker.init(elems, options);
            instance.setDate(new Date());
        });
    </script>
</div>
